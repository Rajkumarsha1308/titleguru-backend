generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  plan      String   @default("free")
  createdAt DateTime @default(now())
  generations Generation[]
}

model Generation {
  id        String   @id @default(uuid())
  keyword   String
  response  String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}